{
  "mcpServers": {
    "mysql-crm": {
      "command": "npx",
      "args": [
        "-y",
        "@benborla29/mcp-server-mysql"
      ],
      "env": {
        "MYSQL_HOST": "127.0.0.1",
        "MYSQL_PORT": "3306",
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "",
        "MYSQL_DATABASE": "crm",
        "MYSQL_SSL": "false",
        "MYSQL_CHARSET": "utf8mb4",
        "MYSQL_COLLATION": "utf8mb4_unicode_ci"
      },
      "disabled": false
    },
    "postgres-crm": {
      "command": "npx",
      "args": [
        "-y",
        "enhanced-postgres-mcp-server"
      ],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://root:@127.0.0.1:5432/crm"
      },
      "disabled": true
    }
  }
}
